
@model Clothes

@{
    ViewBag.Title = Model.Name;
}

<!-- Контент сторінки -->
<div class="container">
    <div class="photos">
        @* @foreach(var photo in Model.Photos)
        {
            <img src="@photo.LocalPath" />
        } *@
        <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
            <ol class="carousel-indicators">
                @for(int indicator = 0; indicator < Model.Photos.Count; indicator++)               
                {
                    <li data-target="#carouselExampleIndicators" data-slide-to="@indicator" class="@(indicator == 0 ? "active" : "")"></li>
                }
                @*
                <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
                <li data-target="#carouselExampleIndicators" data-slide-to="2"></li> *@
            </ol>
            <div class="carousel-inner">
                @foreach (var photo in Model.Photos)
                {
                    <div class="carousel-item @(photo == Model.Photos.FirstOrDefault() ? "active" : "")">
                        <img class="d-block w-100" src="@photo.LocalPath" alt="Second slide">
                    </div>
                }
                @* <div class="carousel-item active">
                <img class="d-block w-100" src="..." alt="First slide">
                </div>
                <div class="carousel-item">
                    <img class="d-block w-100" src="..." alt="Second slide">
                </div>
                <div class="carousel-item">
                    <img class="d-block w-100" src="..." alt="Third slide">
                </div> *@
            </div>
            <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="sr-only">Previous</span>
            </a>
            <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="sr-only">Next</span>
            </a>
        </div>
    </div>
    <div class="info">
        <div class="name">@Model.Name</div>
        <div class="prise">@Model.Prise грн</div>
        <div class="">Кольори</div>
        <div class="colors">
            @foreach(var color in Model.Colors)
            {
                <button class="color-icon" style="background-color: @color.Hex;"></button>
            }
        </div>
        <div class="">Розміри</div>
        <div class="sizes">
            @foreach (var size in Model.Sizes)
            {
                <button class="size">@size.Title</button>
            }
        </div>
        <button class="add-to-basket">
            <i class='bx bx-shopping-bag'></i>
            <span>Додати у кошик</span>
        </button>
        <button class="add-to-wish">
            <i class='bx bx-heart'></i>
            <span>Додати до бажаного</span>
        </button>
    </div>
</div>

<!-- Додавання файлів -->
<link rel="stylesheet" href="/css/clothes.css" asp-append-version="true" />